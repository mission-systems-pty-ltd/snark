radius_field[0]="( echo 0,0,1; echo 0,0,2; echo 0,0,3 ) | points-join --fields x,y <( echo 0,1; echo 0,2; echo 0,3 )\';fields=x,y\' --radius 3 --all"
radius_field[1]="( echo 0,0,1; echo 0,0,2; echo 0,0,3 ) | points-join --fields x,y,radius <( echo 0,1; echo 0,2; echo 0,3 )\';fields=x,y\' --radius 3 --all"
radius_field[2]="( echo 0,0,1; echo 0,1,2; echo 0,2,3 ) | points-join --fields x,y <( echo 0,1,3; echo 0,2,2; echo 0,3,1 )\';fields=x,y,radius\' --radius 3 --all"
radius_field[3]="( echo 0,0,0.5; echo 0,0,1; echo 0,2,0.1 ) | points-join --fields x,y,radius <( echo 0,1,0.5; echo 0,2,1.5; echo 0,3,1 )\';fields=x,y,radius\' --radius 3 --all"
radius_field[4]="( echo 0,0,0.5; echo 0,0,1; echo 0,2,0.1 ) | points-join --fields x,y,radius <( echo 0,1,0.5; echo 0,2,1.5; echo 0,3,1 )\';fields=x,y,radius\' --radius 3 --all --min-radius 0.1"
